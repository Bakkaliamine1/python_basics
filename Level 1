___________________________________________________________________________
___________________________________________________________________________  Formating String


first_name = 'Amine'
last_name = 'Bakkali'
output = 'Hello, ' + first_name +' '+ last_name
print(output)


---> Hello, Amine Bakkali

___________________________________________________________________________
___________________________________________________________________________


first_name = 'Amine'
last_name = 'Bakkali'
output = 'Hello, {} {}'.format(first_name, last_name)
print(output)


---> Hello,  Amine Bakkali

////////////////////////////////////////////////////////////////////////////

first_name = 'Amine'
last_name = 'Bakkali'
output = 'Hello, {1} {0} '.format(first_name, last_name)
print(output)


---> Hello,  Bakkali Amine

////////////////////////////////////////////////////////////////////////////

first_name = 'Amine'
last_name = 'Bakkali'
output = 'Hello, {1}, {0} '.format(first_name, last_name)
print(output)


---> Hello,  Bakkali, Amine

////////////////////////////////////////////////////////////////////////////

first_name = 'Amine'
last_name = 'Bakkali'
output = f'Hello, {first_name} {last_name}'
print(output)


---> Hello,  Amine Bakkali

////////////////////////////////////////////////////////////////////////////

first_name = input('please enter you first name : ')   # for example Amine
last_name = input('please enter you last name : ')   # for example Bakkali
output = f'Hello, {first_name} {last_name}'
print(output)


---> Hello,  Amine Bakkali

